<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />

	<package name="hello" extends="struts-default">
		<interceptors>
			<interceptor name="authentication" class="it.formarete.interceptor.Authentication" />
			
			<interceptor-stack name="cookie-auth">
				<interceptor-ref name="cookie">
    				<param name="cookiesName">username</param>
				</interceptor-ref>
				<interceptor-ref name="authentication" />
			</interceptor-stack>
		</interceptors>

		<global-results>
			<result name="login" type="redirect">area-protetta</result>
		</global-results>

		<action name="login" class="it.formarete.action.Login" method="execute">
			<result name="success">/hello.jsp</result>
			<result name="input">/login-error.jsp</result>
		</action>

		<action name="area-protetta" class="it.formarete.action.RestrictedArea" method="execute">
			<interceptor-ref name="cookie-auth" />
			<result name="success">/area-protetta/index.jsp</result>
			<result name="login">/login.jsp</result>
			<result name="input">/login.jsp</result>
		</action>
	</package>
</struts>
