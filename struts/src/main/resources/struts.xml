<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="" />

	<package name="default" extends="struts-default">
		<action name="">
			<result>/WEB-INF/classes/jsp/index.jsp</result>
		</action>
	</package>

	<package name="restricted-area" namespace="/restricted-area"
		extends="struts-default">
		<interceptors>
			<interceptor-stack name="authStack">
				<interceptor-ref name="exception" />
				<interceptor-ref name="cookie">
					<param name="cookiesName">login</param>
					<param name="cookiesValue">*</param>
				</interceptor-ref>
				<interceptor-ref name="cookieProvider" />
				<interceptor-ref name="params" />
				<interceptor-ref name="prepare" />
				<!-- <interceptor-ref name="defaultStack" /> -->
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="authStack" />

		<global-results>
			<result name="input">/WEB-INF/classes/jsp/restricted-area/auth-input.jsp
			</result>
			<result name="login">/WEB-INF/classes/jsp/restricted-area/auth-login.jsp
			</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping result="input"
				exception="it.formarete.exception.InputException" />
			<exception-mapping result="login"
				exception="it.formarete.exception.LoginException" />
		</global-exception-mappings>

		<action name="home" class="it.formarete.action.Auth">
			<result>/WEB-INF/classes/jsp/restricted-area/index.jsp</result>
		</action>

		<action name="gallery" class="it.formarete.action.Auth">
			<result>/WEB-INF/classes/jsp/restricted-area/gallery.jsp</result>
		</action>

		<action name="logout" class="it.formarete.action.Auth" method="logout">
			<interceptor-ref name="defaultStack" />
			<result type="redirect">/</result>
		</action>
	</package>
</struts>
